<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root alignment="CENTER" minHeight="273.0" minWidth="410.0" type="HBox" xmlns="http://javafx.com/javafx/8.0.241" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.ac.ulb.infof307.g06.presentation.manageuser.signin.SignInView">
    <children>
        <VBox alignment="CENTER" prefHeight="273.0" prefWidth="369.0" spacing="10.0">
            <children>
                <Label id="welcome" alignment="CENTER" text="Welcome to TikZOverflow"></Label>
                <Label id="page-title" alignment="CENTER" text="Sign In"></Label>
                <GridPane vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Username" />
                        <Label text="Password" GridPane.rowIndex="1" />
                        <TextField fx:id="usernameTextField" promptText="Username" GridPane.columnIndex="1" />
                        <PasswordField fx:id="passwordField" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </GridPane>
                <VBox>
                    <children>
                        <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#confirmButtonClicked" prefHeight="25.0" prefWidth="382.0" text="Confirm">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin></Button>
                        <Hyperlink fx:id="signUpHyperlink" onAction="#signUpHyperlinkClicked" prefHeight="23.0" prefWidth="198.0" text="Create an user">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin></Hyperlink>
                    </children>
                </VBox>
            </children>
            <HBox.margin>
                <Insets />
            </HBox.margin>
        </VBox>
    </children>
    <padding>
        <Insets left="20.0" right="20.0" />
    </padding>
</fx:root>
