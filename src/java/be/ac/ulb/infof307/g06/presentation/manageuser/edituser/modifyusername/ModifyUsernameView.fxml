               </children>
            </HBox>
            <TextField fx:id="newUsernameTextField" />
            <HBox alignment="CENTER" spacing="50.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#confirmOnAction" prefWidth="70.0" text="Confirm" />
                  <Button mnemonicParsing="false" onAction="#cancelOnAction" prefWidth="70.0" text="Cancel" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
